{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 19",

    "compilerOptions": {
        "lib": ["es2022"],
        "module": "commonjs",
        "target": "es2022",

        "strict": true,
        "sourceMap": true,
        "declaration": true,
        "declarationMap": false,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "outDir": "./build"
    }
}
